numberOfClusters<-as.numeric(readline("Number of clusters:")) 
rawdata<-cbind(datasetpath$age,datasetpath$total)
rownames(rawdata)<-datasetpath$customer
colnames(rawdata)<-c("age","total")

#k-means
if(numberOfClusters<4&numberOfClusters>2){
  
  customers<-kmeans(rawdata,centers = numberOfClusters )#stats
  customers
  
}else
  print("Enter Number of clusters between (2:4)")


##table


customer_name<-c(datasetpath$customer)
customer_age<-c(datasetpath$age)
customer_totalSpending<-c(datasetpath$total)
customer_cluster<-c(customers$cluster)

customer_table<-data.frame(customer_name,customer_age,customer_totalSpending,customer_cluster)
print(customer_table)